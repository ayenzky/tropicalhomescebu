---

import Layout from '../layouts/Layout.astro';
import PropertyListing from '../components/PropertyListing.astro';

const ogData = {
  title: `All Properties | Tropical Homes Cebu`,
  description: `Explore our complete collection of properties available for sale and rent in Cebu, Philippines.`,
  image: `https://tropicalhomescebu.com/images/tropical-homes-cebu-logo.png`,
  url: `https://tropicalhomescebu.com/properties`,
  type: 'website',
};
---

<Layout ogData={ogData}>
  
  <main>
    <div class="py-8 mt-16">
      <div class="container mx-auto px-4">
        <h1 class="text-4xl font-bold text-center mb-2">All Properties</h1>
        <p class="text-gray-600 text-center text-lg dark:text-gray-400 w-1/2 mx-auto">
          Explore our complete collection of properties available for sale and rent
        </p>
      </div>
    </div>
    
    <div class="container mx-auto px-4 py-12">
      <PropertyListing showAllProperties={true} showTitle={false} />
    </div>
  </main>
  
</Layout> 