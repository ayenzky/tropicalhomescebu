---
const agents = [
  {
    name: "John Smith",
    image: "https://i.pravatar.cc/300?img=1",
    title: "Senior Real Estate Agent"
  },
  {
    name: "Sarah Johnson",
    image: "https://i.pravatar.cc/300?img=2",
    title: "Luxury Property Specialist"
  },
  {
    name: "Michael Chen",
    image: "https://i.pravatar.cc/300?img=3",
    title: "Commercial Property Expert"
  },
  {
    name: "Emily Brown",
    image: "https://i.pravatar.cc/300?img=4",
    title: "Residential Sales Agent"
  }
];
---
<section class="container mx-auto px-4 py-16">
  <h2 class="text-3xl font-bold text-center mb-2">Property Agents</h2>
  <p class="text-gray-600 text-center mb-12">
    Meet our experienced team of property experts
  </p>

  <div class="grid grid-cols-4 gap-6">
    {agents.map(agent => (
      <div class="text-center">
        <img 
          src={agent.image} 
          alt={agent.name}
          class="w-48 h-48 rounded-full mx-auto mb-4 object-cover"
        />
        <h3 class="font-semibold text-xl">{agent.name}</h3>
        <p class="text-gray-600">{agent.title}</p>
      </div>
    ))}
  </div>
</section> 